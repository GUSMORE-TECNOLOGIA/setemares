{
  "version": 2,
  "buildCommand": "cd desktop && npm ci && npm run build",
  "outputDirectory": "desktop/dist",
  "framework": "vite",
  "installCommand": "npm ci && cd desktop && npm ci",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
